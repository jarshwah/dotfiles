# Install command-line tools using Homebrew
# Usage: `bundle Brewfile`

# Make sure weâ€™re using the latest Homebrew
update

# Upgrade any already-installed formulae
upgrade

# Install GNU core utilities (those that come with OS X are outdated)
install coreutils
# Install GNU `find`, `locate`, `updatedb`, and `xargs`
install findutils --default-names
install gnu-sed --default-names
# Install Bash 4
install bash
install bash-completion
install vim --override-system-vi

# Install wget with IRI support
install wget --enable-iri

tap homebrew/dupes
tap homebrew/apache
install homebrew/dupes/grep

install --universal pcre

install ack
install autoconf
install autojump
install automake
install git
install go
install htop
install htop-osx
install nginx
install ngrep
install nmap
install node
install openssl
install pkg-config
install postgresql
install pstree
install python
install mercurial
install python3
install readline
install rename
install ssh-copy-id
install tmux
install tree
install wget
install zopfli

